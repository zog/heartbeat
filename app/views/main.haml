.header
  / %ul.nav.nav-pills.pull-right
  /   %li.active
  /     %a{"ng-href" => "#"} Home
  /   %li
  /     %a{"ng-href" => "#"} About
  /   %li
  /     %a{"ng-href" => "#"} Contact
  %h3.text-muted heartbeat

.alert.alert-danger.notification.fade.in{"data-ng-show" => "displayLocationDeletePopup"}
  %h6 Are you sure you want to reset this game?
  .form-controls-alert
    %a.btn{"data-ng-click" => "showResetPopup(false)", href: ""} No
    %a.btn.btn-danger{"data-ng-click" => "character.reset(); showResetPopup(false)", href: ""} Yes

.actions
  .btn-group
    %button.btn.btn-lg.btn-success{"ng-click" => "character.incrementStamina(1)"} Stamina +1
    %button.btn.btn-lg.btn-success{"ng-click" => "character.incrementStamina(100)"} Stamina +100
    %button.btn.btn-lg.btn-success{"ng-click" => "character.incrementStamina(1000)"} Stamina +1000
    %button.btn.btn-lg.btn-danger{"ng-click" => "showResetPopup()"} Reset!

.jumbotron
  .row
    %ul.col-md-12.infos
      %li
        %strong
          %i.glyphicon.glyphicon-cutlery
          stamina
        {{ character.stamina | number:1}}
      %li{"ng-show" => "character.bodyPart('brain').bought"}
        %strong
          %i.glyphicon.glyphicon-user
          brain
        {{ character.brain() | number:1}} (+{{(character.brainBonusFactor - 1) * 100 | number:0}}%)
      %li{"ng-show" => "character.bodyPart('brain').bought"}
        %strong
          %i.glyphicon.glyphicon-refresh
          stamina/s
        {{ character.defaultIncrementPerS() | number:1}} (+{{(character.staminaBonusFactor - 1) * 100 | number:0}}%)
      %li{"ng-show" => "character.bodyPart('brain').bought && (character.brain() > 0 || character.stamina > 0)"}
        %a{"ng-click" => "character.convert()"} â™¥ train my brain !
    %ul.col-md-6.bonuses
      %li{"ng-repeat" => "part in bodyParts", "ng-show" => "part.seeable() || part.bought"}
        %a.btn.btn-success{"ng-click" => "part.upgrade()", "ng-show" => "part.buyable()"} Ugrade! ({{part.upgradeCost()}})
        %a.btn.btn-success{"disabled" => "true" , "ng-show" => "!part.buyable() && part.level < part.maxLevel"} Ugrade! ({{part.upgradeCost()}})
        %a.btn.btn-success{"disabled" => "true" , "ng-show" => "!part.buyable() && part.level >= part.maxLevel"} Max level reached
        {{part.name}} (Lvl {{part.level}})
    %ul.col-md-6.bonuses
      %li{"ng-repeat" => "bonus in bonuses", "ng-show" => "bonus.seeable() || bonus.bought"}
        %a.btn.btn-success{"ng-click" => "bonus.buy()", "ng-show" => "bonus.buyable()"} Buy! ({{bonus.cost}})
        %a.btn.btn-success{"disabled" => 'true', "ng-show" => "!bonus.buyable() && !bonus.bought"} Buy! ({{bonus.cost}})
        %a.btn.btn-default{"ng-show" => "bonus.bought", "disabled" => 'true'} Bought!
        {{bonus.name}}



.footer
  %p @zog, @reuno
